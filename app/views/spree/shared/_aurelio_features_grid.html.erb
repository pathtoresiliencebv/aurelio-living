<%# Aurelio Living Features/USP Grid Component %>
<section class="features-section py-16 bg-white border-t border-b border-color">
  <div class="container mx-auto px-4">
    <% if local_assigns[:title].present? %>
      <h2 class="text-3xl font-bold text-center mb-12"><%= local_assigns[:title] %></h2>
    <% end %>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      <% features.each do |feature| %>
        <div class="feature-item text-center group">
          <%# Icon %>
          <div class="feature-icon mb-4 flex justify-center">
            <% if feature[:icon].present? %>
              <%# Use Heroicons or Tabler Icons %>
              <div class="w-16 h-16 rounded-full bg-accent flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all duration-300">
                <%= render_icon(feature[:icon], class: 'w-8 h-8') if respond_to?(:render_icon) %>
                
                <%# Default icon if render_icon not available %>
                <% unless respond_to?(:render_icon) %>
                  <% case feature[:icon] %>
                  <% when 'package' %>
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"/>
                    </svg>
                  <% when 'rotate-ccw' %>
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h10a8 8 0 018 8v2M3 10l6 6m-6-6l6-6"/>
                    </svg>
                  <% when 'headphones' %>
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"/>
                    </svg>
                  <% when 'tag' %>
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                    </svg>
                  <% else %>
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  <% end %>
                <% end %>
              </div>
            <% end %>
          </div>

          <%# Title %>
          <h3 class="feature-title text-lg font-semibold mb-2">
            <%= feature[:title] %>
          </h3>

          <%# Description %>
          <p class="feature-description text-sm text-neutral">
            <%= feature[:description] %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</section>

